# GREP
alias grep="grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,.idea,.tox}"
alias fgrep="fegrep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,.idea,.tox}"
alias egrep="egrep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,.idea,.tox}"

# GIT
alias ga="git add ."
alias gc="git commit -m"
alias gac="git commit -am"
alias gbd="git checkout develop"
alias gbm="git checkout master"
alias gf="git fetch"
alias gd="git diff"
alias gl="git log"
alias gs="git status"
alias gss="git status -s"
alias gp="git pull"
alias gpush="git push"
alias cleanbranches="git branch --merged | egrep -v '(^\*|master|main|develop)' | xargs git branch -d"

# GENERAL
alias c="clear"
alias e="exit"
alias g="git"
alias systemupdate="sudo apt-get update && sudo apt-get upgrade -y && sudo snap refresh"
alias cat="batcat"
alias wstorm="webstorm"
alias pstorm="phpstorm"
alias clipboard="xclip -sel clip"
alias week="date +%V"
alias localip="ifconfig eno1"
alias sz="source ~/.zshrc"

# NPM
alias pn="pnpm"
alias ni="npm install"
alias nrs="npm run start -s --"
alias nrd="npm run dev -s --"
alias nrb="npm run build -s --"
alias nrt="npm run test -s --"
alias flush-npm="rm -rf node_modules package-lock.json pnpm-lock.yaml && npm install"
alias ncupatch="ncu -ui --target patch"
alias ncuminor="ncu -ui --target minor"
alias ncumajor="ncu -ui --target major"

# IDCOM
alias igs="idcom git status"
alias igc="idcom git clone"
alias igl="idcom git pull"
alias idu="idcom docker up"
alias idd="idcom docker down"
alias idbu="idcom db update"
alias panelstandup="gtpanel && git standup"
alias recursivedockerup="find . -type d -name develop -exec bash -c 'cd '{}' && ./docker_up.sh' \;"
alias idcomupdate="igl && idbu && idu"
alias installcomposers="find . -type d -name bin -exec bash -c 'cd '{}' && ./composer.sh' \; "

# SPECS
alias mock_panel_api="cd ~/IDcom/DEVELOP/pl.idcom.develop.api.specs/specs/pl.idcom.panel.api && prism mock -d pl.idcom.panel.api.json -p 4010"
alias mock_superszkolna_v1_api="cd ~/IDcom/DEVELOP/pl.idcom.develop.api.specs/specs/pl.superszkolna.cms.v1.api && prism mock -d pl.superszkolna.cms.v1.api.json -p 4011"

# SHORTCUTS
alias gtcrm="cd ~/IDcom/CRM/pl.idcom.crm.front.app"
alias gtpanel="cd ~/IDcom/PANEL/pl.idcom.panel.front"
alias gtpanelold="cd ~/IDcom/PANEL/pl.idcom.panel.front.old"

# DOCKER
alias dps="docker ps --format 'table {{.ID}}\t{{.Image}}\t{{.RunningFor}}\t{{.Status}}\t{{.Names}}'"
alias dpsa="docker ps -a --format 'table {{.ID}}\t{{.Image}}\t{{.RunningFor}}\t{{.Status}}\t{{.Names}}'"
alias dkill='docker rm $(docker stop $(docker ps -aq))'

## DOTFILES
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias dotfilesupdate="dotfiles ac '`date +'%Y-%m-%d %H:%M:%S'`: update dotfiles' && dotfiles push"
